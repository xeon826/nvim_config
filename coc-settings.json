{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },
  "pylsp.builtin.installExtrasArgs": [
    "flake8",
    "mccabe",
    "pycodestyle",
    "pydocstyle",
    "pylint",
    "rope"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.config/coc/extensions/@yaegassy/coc-pylsp-data/pylsp/venv/bin/black",
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "pylsp.builtin.enableInstallPylsIsort": true,
  "pylsp.builtin.enableInstallPythonLspBlack": false
}
